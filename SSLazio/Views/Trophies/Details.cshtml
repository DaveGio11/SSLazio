@model SSLazio.Models.Trophies

@{
    ViewBag.Title = "Details";
}
<style>
    .sedan-regular {
        font-family: "Sedan", serif;
        font-weight: 400;
        font-style: normal;
    }

    .sedan-regular-italic {
        font-family: "Sedan", serif;
        font-weight: 400;
        font-style: italic;
    }

</style>

<h2 class="text-center my-3">@Html.DisplayFor(model => model.NomeTrofeo) @Html.DisplayFor(model => model.AnnoTrofeo)</h2>

<div class="container sedan-regular-italic fs-4">
    <div class="row">
        <div class="col-12">
            <img class="card-img-top my-3 rounded" src="@Url.Content("~/Content/Trofei/" + Model.ImgSquadra)" alt="Card image cap">
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <p class="my-3 text-center">@Html.DisplayFor(model => model.Descrizione)</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div id="carouselExampleCaptions" class="carousel slide mb-4" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Url.Content("~/Content/Trofei/" + Model.ImgDettaglio1)" class="d-block w-100 rounded" alt="News1">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@Html.DisplayFor(model => model.TextDetail1)</h5>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/Content/Trofei/" + Model.ImgDettaglio2)" class="d-block w-100 rounded" alt="News1">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@Html.DisplayFor(model => model.TextDetail2)</h5>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/Content/Trofei/" + Model.ImgDettaglio3)" class="d-block w-100 rounded" alt="News1">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@Html.DisplayFor(model => model.TextDetail3)</h5>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/Content/Trofei/" + Model.ImgDettaglio4)" class="d-block w-100 rounded" alt="News1">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>@Html.DisplayFor(model => model.TextDetail4)</h5>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

        </div>
    </div>
</div>


@if (User.IsInRole("Admin"))
{
    <div class="d-flex align-content-center my-5">
        <button class="ssl-button me-3">
            @Html.ActionLink("Edit", "Edit", new { id = Model.IDTrofeo }, new { @class = "text-white text-decoration-none" })
        </button>
        <button class="ssl-button">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "text-white text-decoration-none" })
        </button>
    </div>

}
else
{
    <button class="ssl-button my-5">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "text-white text-decoration-none" })
    </button>
}


