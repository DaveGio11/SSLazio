<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Applicazione ASP.NET</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-dark sticky-top" style="padding:0; background: linear-gradient(to bottom right, #a38d37, #f5f5f5); ">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })">
                <img src="@Url.Content("~/Content/Team/Logo80.png")" alt="Logo" height="50" width="50" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav flex-grow-1">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Team
                            </a>
                            <ul class="dropdown-menu bg-goldwhite" aria-labelledby="navbarDropdown">
                                <li> @Html.ActionLink("Squadra Maschile", "Index", "Calciatori", new { area = "" }, new { @class = "dropdown-item1 text-white" }) </li>
                                <li> @Html.ActionLink("Squadra Femminile", "Index", "Calciatrici", new { area = "" }, new { @class = "dropdown-item1 text-white" })</li>
                                <li><a class="dropdown-item1" href="#">Primavera</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white" href="#" id="navbarDropdown1" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Club
                            </a>
                            <ul class="dropdown-menu bg-goldwhite" aria-labelledby="navbarDropdown1">
                                <li></li>
                                <li><a class="dropdown-item1" href="#">Storia</a></li>
                                <li><a class="dr dropdown-item1" href="#">Trofei</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link text-white" href="#" id="navbarDropdown2" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                News
                            </a>
                            <ul class="dropdown-menu bg-goldwhite" aria-labelledby="navbarDropdown2">
                                <li></li>
                                <li><a class="dropdown-item1" href="#">Comunicazioni</a></li>
                                <li> @Html.ActionLink("News", "Index", "News", new { area = "" }, new { @class = "dropdown-item1 text-white" })</li>

                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white" href="#" id="navbarDropdown3" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Casa Lazio
                            </a>
                            <ul class="dropdown-menu bg-goldwhite" aria-labelledby="navbarDropdown4">
                                <li></li>
                                <li><a class="dropdown-item1" href="#">Training Center SSL</a></li>
                                <li><a class="dropdown-item1" href="#">Iscrizioni Settore Giovanile</a></li>
                                <li><a class="dropdown-item1" href="#">Camp Estivi</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white" href="#" id="navbarDropdown5" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Stadio
                            </a>
                            <ul class="dropdown-menu bg-goldwhite" aria-labelledby="navbarDropdown5">
                                <li> @Html.ActionLink("Biglietti", "Index", "Partite", new { area = "" }, new { @class = "dropdown-item1 text-white" }) </li>
                                <li> @Html.ActionLink("Abbonamenti", "Index", "SettoriAbb", new { area = "" }, new { @class = "dropdown-item1 text-white" }) </li>
                                <li><a class="dropdown-item1" href="#">Tour Olimpico</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Shop</a>
                        </li>
                    }
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Team
                            </a>
                            <ul class="dropdown-menu bg-goldwhite" aria-labelledby="navbarDropdown">
                                <li> @Html.ActionLink("Squadra Maschile", "Index", "Calciatori", new { area = "" }, new { @class = "dropdown-item1 text-white" }) </li>
                                <li> @Html.ActionLink("Squadra Femminile", "Index", "Calciatrici", new { area = "" }, new { @class = "dropdown-item1 text-white" })
                                <li><a class="dropdown-item1" href="#">Primavera</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Club
                            </a>
                            <ul class="dropdown-menu bg-goldwhite" aria-labelledby="navbarDropdown">
                                <li></li>
                                <li><a class="dropdown-item1" href="#">Storia</a></li>
                                <li><a class="dropdown-item1" href="#">Trofei</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                News
                            </a>
                            <ul class="dropdown-menu bg-goldwhite" aria-labelledby="navbarDropdown">
                                <li></li>
                                <li><a class="dropdown-item1" href="#">Comunicazioni</a></li>
                                <li> @Html.ActionLink("News", "Index", "News", new { area = "" }, new { @class = "dropdown-item1 text-white" })</li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Casa Lazio
                            </a>
                            <ul class="dropdown-menu bg-goldwhite" aria-labelledby="navbarDropdown">
                                <li></li>
                                <li><a class="dropdown-item1" href="#">Training Center SSL</a></li>
                                <li><a class="dropdown-item1" href="#">Iscrizioni Settore Giovanile</a></li>
                                <li><a class="dropdown-item1" href="#">Camp Estivi</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Stadio
                            </a>
                            <ul class="dropdown-menu bg-goldwhite" aria-labelledby="navbarDropdown">
                                <li>@Html.ActionLink("Biglietti", "Index", "Partite", new { area = "" }, new { @class = "dropdown-item1 text-white" })</li>
                                <li><a class="dropdown-item1" href="#">Abbonamenti</a></li>
                                @if (User.IsInRole("Tifoso"))
                                {
                                    <li> @Html.ActionLink("Cambio Nominativo", "Index", "Biglietti", new { area = "" }, new { @class = "dropdown-item1 text-white" }) </li>
                                }
                                @if (User.IsInRole("Admin"))
                                {
                                    <li> @Html.ActionLink("Cambio Nominativo", "Index", "Biglietti", new { area = "" }, new { @class = "dropdown-item1 text-white" }) </li>
                                }
                                <li>@Html.ActionLink("CreaPartite", "Create", "Partite", new { area = "" }, new { @class = "dropdown-item1 text-white" })</li>
                                <li>@Html.ActionLink("Settori Biglietti", "Create", "SettoriStadio", new { area = "" }, new { @class = "dropdown-item1 text-white" })</li>
                                <li>@Html.ActionLink("Settori Abb", "Create", "SettoriAbb", new { area = "" }, new { @class = "dropdown-item1 text-white" })</li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Shop</a>
                        </li>
                    }
                       
                    </ul>
                <form class="d-flex">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="navbar-brand" href="@Url.Action("Login", "Utenti", new { area = "" })" title="Login">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 viewBox="0 0 24 24"
                                 width="35"
                                 height="35">
                                <defs>
                                    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" style="stop-color: #61c8e7;" />
                                        <stop offset="100%" style="stop-color: #FFFFFF;" />
                                    </linearGradient>
                                </defs>
                                <path fill="url(#gradient)"
                                      stroke="#396ba4"
                                      stroke-width="0.5"
                                      d="M12 2c2.76 0 5 2.24 5 5s-2.24 5-5 5-5-2.24-5-5 2.24-5 5-5m0 11c2.67 0 8 1.34 8 4v2H4v-2c0-2.66 5.33-4 8-4z"></path>
                            </svg>
                        </a>


                    }
                    else
                    {
                        <a class="navbar-brand" href="@Url.Action("Index", "Utenti", new { area = "" })" title="Area Personale">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 viewBox="0 0 24 24"
                                 width="35"
                                 height="35">
                                <defs>
                                    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" style="stop-color: #61c8e7;" />
                                        <stop offset="100%" style="stop-color: #FFFFFF;" />
                                    </linearGradient>
                                </defs>
                                <path fill="url(#gradient)"
                                      stroke="#396ba4"
                                      stroke-width="0.5"
                                      d="M12 2c2.76 0 5 2.24 5 5s-2.24 5-5 5-5-2.24-5-5 2.24-5 5-5m0 11c2.67 0 8 1.34 8 4v2H4v-2c0-2.66 5.33-4 8-4z"></path>
                            </svg>
                        </a>

                        <a class="navbar-brand" href="@Url.Action("Logout", "Utenti", new { area = "" })" title="Logout">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 viewBox="0 0 512 512"
                                 width="30"
                                 height="30">

                                <defs>
                                    <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                        <stop offset="0%" style="stop-color: #61c8e7;" />
                                        <stop offset="100%" style="stop-color: #FFFFFF;" />
                                    </linearGradient>
                                </defs>
                                <path fill="url(#gradient)"
                                      stroke="#396ba4"
                                      stroke-width="3"
                                      d="M377.9 105.9L500.7 228.7c7.2 7.2 11.3 17.1 11.3 27.3s-4.1 20.1-11.3 27.3L377.9 406.1c-6.4 6.4-15 9.9-24 9.9c-18.7 0-33.9-15.2-33.9-33.9l0-62.1-128 0c-17.7 0-32-14.3-32-32l0-64c0-17.7 14.3-32 32-32l128 0 0-62.1c0-18.7 15.2-33.9 33.9-33.9c9 0 17.6 3.6 24 9.9zM160 96L96 96c-17.7 0-32 14.3-32 32l0 256c0 17.7 14.3 32 32 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32l-64 0c-53 0-96-43-96-96L0 128C0 75 43 32 96 32l64 0c17.7 0 32 14.3 32 32s-14.3 32-32 32z" />
                            </svg>

                        </a>
                    }
                </form>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Applicazione ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>
