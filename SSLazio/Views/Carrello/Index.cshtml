﻿@model IEnumerable<SSLazio.Models.Prodotti>

@{
    ViewBag.Title = "Index";
}



<h1 class="text-center bebas-neue-regular">SUMMARY</h1>

<div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
            @foreach (var item in Model)
            {
                <div class="row align-items-center mb-3" style="border: 1px solid #cbc094">
                    <div class="col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        <img src="@Url.Content("~/Content/Negozio/" + item.Immagine)" class="card-img-top" alt="...">
                    </div>
                    <div class="col-6 col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.NomeProdotto)</h5>
                    </div>
                    <div class="col-6 col-sm-3 col-md-3 col-lg-3 col-xl-3">
                        <p class="card-text"><small class="text-muted">Quantity: @Html.DisplayFor(modelItem => item.Quantita)</small></p>
                        <p class="card-text fw-bold">Price: @String.Format("{0:F2}", (item.Prezzo * item.Quantita)) £</p>
                    </div>
                    <div class="col-12 col-sm-3 col-md-3 col-lg-3 col-xl-3 d-flex justify-content-center">
                        <a href="@Url.Action("Delete", new { id = item.IdProdotto })" class="ssl-button text-danger text-decoration-none my-3 my-sm-0 p-1">Rimuovi</a>
                    </div>
                </div>           
             }
        </div>
        <div class="col-lg-6">
            <div class="card"  style="border: 1px solid #cbc094; background-color: #01102b">
                <div class="card-header text-blu fw-bold" style="background-color: #cbc094">
                    Checkout
                </div>
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label for="nome">Name:</label>
                            <input type="text" class="form-control" id="nome" name="nome" required>
                        </div>
                        <div class="form-group">
                            <label for="cognome">Surname:</label>
                            <input type="text" class="form-control" id="cognome" name="cognome" required>
                        </div>
                        <div class="form-group">
                            <label for="indirizzo">Street Address:</label>
                            <input type="text" class="form-control" id="indirizzo" name="indirizzo" required>
                        </div>
                        <div class="form-group">
                            <label for="citta">City/Town:</label>
                            <input type="text" class="form-control" id="citta" name="citta" required>
                        </div>
                        <div class="form-group">
                            <label for="cap">Postal Code:</label>
                            <input type="text" class="form-control" id="cap" name="cap" required>
                        </div>
                        <div class="form-group">
                            <label for="paese">Country:</label>
                            <input type="text" class="form-control" id="paese" name="paese" required>
                        </div>
                        <hr />
                        <div class="mt-2">
                            <h5>Order Summary</h5>
                            <p>Total: @String.Format("{0:F2}", Model.Sum(item => item.Prezzo * item.Quantita)) £</p>
                            <p>Estimated Delivery: @GetRandomDeliveryDays() business days</p>
                        </div>
                    </form>
                    @using (Html.BeginForm("Order", "Carrello", FormMethod.Post))
                    {
                        <input type="submit" class="btn btn-success " value="CONFIRM ORDER" />
                    }
                </div>
            </div>
        </div>
     </div>
</div>

    <script>
@functions {
    private int GetRandomDeliveryDays()
    {
        Random random = new Random();
        return random.Next(2, 8);
    }
}
    </script>
