<header>
    <section class="row text-center bordoceleste text-blu mb-5 mt-4 background-titleHome" aria-labelledby="aspnetTitle">
        <h1 id="aspnetTitle" class="bordobianco"><em>Sito Ufficiale S.S. Lazio</em></h1>
        <p class="lead bordobianco roboto-italic"><em>La Prima Squadra Della Capitale Dal 1900</em></p>
    </section>
</header>



<article class="my-4 row">
    <div id="carouselExampleCaptions" class="carousel slide mb-4" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/News/zacrinnovo.png" class="d-block w-100 rounded" alt="News1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Zaccagni Rinnova</h5>
                    <p>L'esterno romagnolo arriva all'accordo di rinnovo</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Content/News/tatyjuve.png" class="d-block w-100 rounded" alt="News1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Lazio - Juventus</h5>
                    <p>La doppietta del Taty alla Juventus non basta</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Content/News/cirobayern.png" class="d-block w-100 rounded" alt="News1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Bayern - Lazio</h5>
                    <p>Tutti gli indosponibili per il ritorno di Champions</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</article>

<section class="row background-image-home justify-content-evenly mb-5">
    @if (Model != null)
    {
        var prossimaPartita = Model.OrderBy(p => p.DataOra).FirstOrDefault();
        if (prossimaPartita != null)
        {
            <div class="row divMatchFirst text-white bordoceleste mb-5">
                <div class="d-flex justify-content-center">
                    <p class="h2 my-3 bordobianco text-gold">Next Match</p>
                </div>
                <div class="col-4 my-5 justify-content-around text-center align-content-center">
                    <img class="my-5 img-fluid" src="@Url.Content("~/Content/PartiteLogo/" + prossimaPartita.LogoLazio)" height="300" width="300" alt="Logo Lazio" />
                </div>
                <div class="col-4 my-5 flex-column justify-content-center text-center align-content-center">
                    <div><img class="mt-3 img-fluid" src="@Url.Content("~/Content/PartiteLogo/" + prossimaPartita.LogoCompetizione)" height="150" width="150" alt="Logo Competizione" /></div>
                    <div class="h5 display-7 d-flex justify-content-center">@prossimaPartita.DataOra</div>
                    <div>@prossimaPartita.Luogo</div>
                    <div class="d-flex justify-content-center">
                        <button class="button1 my-5">
                            @Html.ActionLink("Acquista", "Index", "Partite", null, new { @class = "text-blu text-decoration-none" })
                        </button>
                    </div>
                </div>
                <div class="col-4 my-5 justify-content-around text-center align-content-center">
                    <img class="my-5 img-fluid" src="@Url.Content("~/Content/PartiteLogo/" + prossimaPartita.LogoAvversario)" height="200" width="200" alt="Logo Avversario" />
                </div>
            </div>
            <!-- Altri dettagli della partita se necessario -->
        }
        else
        {
            <div class="row divMatchFirst text-white bordoceleste mb-5">
                <div class="col-4 my-5 justify-content-around text-center align-content-center">
                    <img class="my-5 img-fluid" src="@Url.Content("~/Content/PartiteLogo/Lazio.png")" height="300" width="300" alt="Logo Lazio" />
                </div>
                <div class="col-4 my-5 flex-column justify-content-center text-center align-content-center">
                    <div><img class="mt-3 img-fluid" src="@Url.Content("~/Content/PartiteLogo/Paideia.png" )" height="60" width="100" alt="Logo Sponsor" /></div>
                    <div class="h5 display-7 d-flex justify-content-center"><strong>Nessuna Partita in Programma</strong></div>

                </div>
                <div class="col-4 my-5 justify-content-around text-center align-content-center">
                    <img class="my-5 img-fluid" src="@Url.Content("~/Content/PartiteLogo/Mizuno.png")" height="200" width="200" alt="Logo Mizuno" />
                </div>
            </div>
        }
    }
    else
    {
        <div>
            Nessuna informazione disponibile.
        </div>
    }

</section>


<main>
    <div class="row justify-content-evenly mb-5 rounded">
        <section class="col-12 mb-2 col-md-5 background-divisa text-blu bordoceleste px-3" aria-labelledby="gettingStartedTitle">
            <div class="d-flex flex-column justify-content-between">
                <div class="mb-2">
                    <h2 id="gettingStartedTitle">Visita lo Shop</h2>
                </div>
                <div class="mb-5">
                    <p class="mb-5">
                        Acquista i kit ufficiali
                    </p>
                </div>
                <div class="my-5">
                    <button class="ssl-button">
                        @Html.ActionLink("Shop", "Index", "Prodotti", null, new { @class = "text-blu bordobianco text-decoration-none" })
                    </button>
                </div>
            </div>
        </section>
        <section class="col-12 mb-2 col-md-5 background-trofei text-blu bordoceleste px-3 " aria-labelledby="gettingStartedTitle">
            <div class="d-flex flex-column justify-content-between">
                <div class="mb-2">
                    <h2 id="gettingStartedTitle">Visita la Sala Trofei</h2>
                </div>
                <div class="mb-5">
                    <p class="mb-5">
                        Rivivi i successi biancocelesti
                    </p>
                </div>

                <div class="my-5">
                    <button class="ssl-button"><a class="text-decoration-none text-blu bordobianco" href="#">Sala Trofei &raquo;</a></button>
                </div>

            </div>
        </section>
    </div>
