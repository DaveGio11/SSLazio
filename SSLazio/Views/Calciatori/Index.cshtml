@section Scripts {
    <script>
        $(document).ready(function () {
            $('#searchInputPlayers').on('input', function () {
                var searchText = $(this).val().toLowerCase();
                $('.card1').each(function () {
                    var playerName = $(this).find('.bordobianco').text().toLowerCase();
                    if (playerName.indexOf(searchText) === -1) {
                        $(this).addClass('d-none');
                    } else {
                        $(this).removeClass('d-none');
                    }
                });
            });
        });
    </script>
}

