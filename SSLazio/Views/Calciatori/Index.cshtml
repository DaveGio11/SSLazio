                <a href="@Url.Action("Details", new { id = portiere.IDCalciatore })" class="card-link text-decoration-none">
                    <div class="card1" style="background-image: url('@Url.Content("~/Content/Team/" + portiere.ImgCalciatore)'); background-size: cover; background-position: center;">
